{
  "name": "costs",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "json-server": "^1.0.0-beta.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.28.0",
    "react-scripts": "5.0.1",
    "uuid": "^11.0.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",  // Comando para iniciar o React no ambiente de produção
    "build": "react-scripts build",  // Comando para construir o projeto React
    "test": "react-scripts test",    // Comando para rodar os testes no React
    "eject": "react-scripts eject",  // Comando para ejetar a configuração do React
    "backend": "json-server --watch db.json --port 5000",  // Comando para iniciar o JSON Server
    "dev": "concurrently \"npm run backend\" \"npm start\""  // Comando para rodar localmente ambos os serviços
  },
  "devDependencies": {
    "concurrently": "^8.0.1"  // Pacote necessário para rodar ambos os serviços ao mesmo tempo localmente
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
